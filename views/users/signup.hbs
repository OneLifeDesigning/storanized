<div class="container">
  <div class="general-container">
    <div id="messageError" class="alert alert-danger d-none  mt-2"></div>
    <form action="/signup" method="POST" class="my-3" > 
          {{#if success}}
        <div class="alert alert-success">
          {{success.message}}
        </div>
      {{/if}}
      {{#if error.validation}}
        <div class="alert alert-danger">
          {{error.validation.message}}
        </div>
      {{/if}}
      <h1 class="text-center mb-4">{{title}}</h1>
      <div class="form-row align-items-center">
        <div class="form-group col-12 col-md-6">
          <label for="name">Name</label>
          <input type="text" class="form-control  {{#if error.name }}is-invalid{{/if}}" id="name" value="{{ user.name }}" name="name" required>
          {{#if error.name}}
            <div class="invalid-feedback">
              {{error.name.message}}
            </div>
          {{/if}}
        </div>
        <div class="form-group col-12 col-md-6">
          <label for="lastname">Lastname</label>
          <input type="text" class="form-control  {{#if error.lastname }}is-invalid{{/if}}" id="lastname" value="{{ user.lastname }}" name="lastname" required>
          {{#if error.lastname}}
            <div class="invalid-feedback">
              {{error.lastname.message}}
            </div>
          {{/if}}
        </div>
        <div class="form-group col-12 col-md-6">
          <label for="username">Username</label>
          <input type="text" class="form-control  {{#if error.username }}is-invalid{{/if}}" id="username" value="{{ user.username }}" name="username" required>
          {{#if error.username}}
            <div class="invalid-feedback">
              {{error.username.message}}
            </div>
          {{/if}}
        </div>
        <div class="form-group col-12 col-md-6">
          <label for="email">Email</label>
          <input type="email" class="form-control  {{#if error.email }}is-invalid{{/if}}" id="email" value="{{ user.email }}" name="email" required>
          {{#if error.email}}
            <div class="invalid-feedback">
              {{error.email.message}}
            </div>
          {{/if}}
        </div>
        <div class="form-group  col-12 col-md-6">
          <label for="password">Password</label>
          <input type="password" class="form-control  {{#if error.password }}is-invalid{{/if}}" id="password" value="{{ user.password }}" name="password" required>
          {{#if error.password}}
            <div class="invalid-feedback">
              {{error.password.message}}
            </div>
          {{/if}}
        </div>
        <div class="form-group  col-12 col-md-6">
          <label for="repeatPassword">Repeat password</label>
          <input type="password" class="form-control  {{#if error.repeatPassword }}is-invalid{{/if}}" id="repeatPassword" value="{{ user.repeatPassword }}" name="repeatPassword" required>
          {{#if error.repeatPassword}}
            <div class="invalid-feedback">
              {{error.repeatPassword.message}}
            </div>
          {{/if}}
        </div>
        <div class="col-12 col-md-9">
          <div class="custom-control custom-switch">
            <input type="checkbox" class="custom-control-input  {{#if error.terms }}is-invalid{{/if}}" name="terms" id="terms" value="true" required>
            <label class="custom-control-label" for="terms">I'm accept term and conditions.</label>
          </div>
          {{#if error.terms}}
            <div class="invalid-feedback">
              {{error.terms.message}}
            </div>
          {{/if}}
        </div>
        <div class="col-12  col-md-3">
          <button type="submit" class="btn btn-success btn-block">Signup</button>
        </div>
        <div class="col-12 text-center">
          <p>Have an account? <a href="/login">login</a>.</p>
        </div>
      </div>
    </form>
    </div>
</div>