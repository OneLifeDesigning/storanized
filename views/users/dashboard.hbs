    <div class="main-container">
      <div class="profile">
        <div class="profile-avatar">
          <img src="{{user.avatar}}" alt="{{ user.name }} {{ user.lastname }}" class="profile-img">
          <div class="profile-name">{{ user.name }} {{ user.lastname }}<br> <small>{{ user.username }} - {{ user.email }}</small>
          </div>
        </div>

        <div class="nav profile-menu">
          <a class="profile-menu-link">Products</a>
          <a class="profile-menu-link">Boxes</a>
          <a class="profile-menu-link">Chats</a>
          <a class="profile-menu-link">Jungle Sales</a>
        </div>
      </div>
      <div id="pills-tabContent">
        <div class="tab-content" >
          <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
            <div class="timeline">
              <div class="timeline-left">
                <div class="intro box">
                  <div class="intro-title">
                    Categories
                  </div>
