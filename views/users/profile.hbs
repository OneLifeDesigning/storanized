<p>{{ user.username }}</p>
<p>{{ user.email }}</p>
<form action="/profile" method="POST" enctype="multipart/form-data" class="my-5" > 
  <div class="form-row align-items-center">
    <div class="form-group col-12 col-md-6">
      <label for="name">Name</label>
      <input type="text" class="form-control  {{#if error.name }}is-invalid{{/if}}" id="name" value="{{ user.name }}" name="name" required>
      {{#if error.name}}
        <div class="invalid-feedback">
          {{error.name.message}}
        </div>
      {{/if}}
    </div>
    <div class="form-group col-12 col-md-6">
      <label for="lastname">Lastname</label>
      <input type="text" class="form-control  {{#if error.lastname }}is-invalid{{/if}}" id="lastname" value="{{ user.lastname }}" name="lastname" required>
      {{#if error.lastname}}
        <div class="invalid-feedback">
          {{error.lastname.message}}
        </div>
      {{/if}}
    </div>
    <div class="form-group col-12 col-md-6">
      <select class="custom-select" name="genre">
        <option {{#ifvalue user.genre value="Female"}}selected{{/ifvalue}} value="Female">Female</option>
        <option {{#ifvalue user.genre value="Male"}}selected{{/ifvalue}} value="Male">Male</option>
        <option {{#ifvalue user.genre value="Other"}}selected{{/ifvalue}} value="Other">Other</option>
      </select>
    </div>
    <div class="form-group col-12 col-md-6">
      <label for="text">Email</label>
      <input type="text" class="form-control  {{#if error.email }}is-invalid{{/if}}" id="email" value="{{ user.email }}" name="email" required>
      {{#if error.email}}
        <div class="invalid-feedback">
          {{error.email.message}}
        </div>
      {{/if}}
    </div>
    <div class="col-12 offset-md-9 col-md-3">
      <button type="submit" class="btn btn-primary btn-block">Save</button>
    </div>
  </div>
</form>