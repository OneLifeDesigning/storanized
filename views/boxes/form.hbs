<div class="form-row align-items-center">
    <div class="form-group col-12">
        <label for="name">Name</label>
        <input type="text" class="form-control  {{#if error.name }}is-invalid{{/if}}" id="name" value="{{ box.name }}"
            name="name" required>
        {{#if error.name}}
        <div class="invalid-feedback">
            {{error.name.message}}
        </div>
        {{/if}}
    </div>
    <div class="form-group col-12">
        <label for="description">Description</label>
        <input type="text" class="form-control  {{#if error.description }}is-invalid{{/if}}" id="description"
            value="{{ box.description }}" name="description">
        {{#if error.description}}
        <div class="invalid-feedback">
            {{error.description.message}}
        </div>
        {{/if}}
    </div>
    <div class="form-group col-12 col-md-6">
        <label for="location">Location</label>
        <input type="text" class="form-control  {{#if error.location }}is-invalid{{/if}}" id="location"
            value="{{ box.location }}" name="location">
        {{#if error.location}}
        <div class="invalid-feedback">
            {{error.location.message}}
        </div>
        {{/if}}
    </div>
    <div class="form-group">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <label class="input-group-text" for="storages">Options</label>
            </div>
            <select class="custom-select" id="storages" name="storage">
                {{#each user.storages as |storage|}}
                <option {{#ifEqual storage.id ../box.storage}} selected {{/ifEqual}} value="{{storage.id}}">
                    {{storage.name}}</option>
                {{/each}}
            </select>
        </div>
    </div>

    <div class="col-12 offset-md-9 col-md-3 mt-2">
        {{#if box}}
        <button type="submit" class="btn btn-primary btn-block">Save</button>
        {{else}}
        <button type="submit" class="btn btn-primary btn-block">Create</button>
        {{/if}}
    </div>
</div>