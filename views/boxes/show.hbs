<section class="container">
  <div class="general-container">
  <h1>{{title}}</h1>
  <div class="bg-box">
    {{#if box}}
      <h1 style="text-align: center;"></strong>{{box.name}}</h1>
      <br>
      <p for="description"><strong>Description: </strong>{{box.description}}</p>
      <p for="location"><strong>Location: </strong>{{box.location}}</p>
      <p for="qr"><strong>Code QR:</p></strong> 
      <img src="{{box.qrCode}}" alt="qrCode">
      <p for="qr"><strong>Storage: </strong>{{box.storage.name}}</p>
      {{/if}}
  </div>
  <section class="bg-products">
    <hr>
    <h1 class="jungle-prod-info_name">Products List</h1>
    {{#if box.products }}
    <table class="table table-hover" data-toggle="table" data-pagination="true" data-search="true">
      <thead class="thead-primary">
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Tags</th>
          <th scope="col">Is public?</th>
          <th scope="col">Options</th>
        </tr>
      </thead>
      <tbody>
        {{#each box.products as |product|}}
        <tr>
          <td>{{product.name}}</td>
          <td>{{product.category}}</td>
          <td>
            <input type="checkbox" name="isPublic" id="isPublic" value="{{product.isPublic}}">
          </td>
          <td>
            <a href="/products/{{product._id}}"><i class="fa fa-eye mr-2"></i></a>
            | <a href="/products/{{product._id}}/edit"><i class="far fa-edit"></i></a>
            | <a href="/products/{{product._id}}/delete"><i class="far fa-trash-alt"></i></a> 
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </section>
  {{/if}}
  </div>
</section>