 <div class="row align-items-center mb-4">
    <div class="col-12 col-md-9">
      <h1 class="">{{title}}</h1>
    </div>
    <div class="col-12 col-md-3 text-right">
      <a href="/boxes/new" class="btn btn-primary"><i class="fa fa-plus mr-2"></i> Add box</a>
    </div>
  </div>
<table class="table" data-toggle="table" data-pagination="true" data-search="true">
  <thead class="thead-primary">
    <tr>
      <th scope="col">Box</th>
      <th  class="text-right">Options</th>
    </tr>
  </thead>
  <tbody>
    {{#each boxes as |box|}}
    <tr>
      <td>{{box.name}}</td>
      <td class="text-right">
        <div class="btn-group">
            <a href="/boxes/{{box.id}}" class="btn btn-success"><i class="fa fa-eye mr-2"></i> View</a>
            <a href="/boxes/{{box.id}}/edit" class="btn btn-warning"><i class="fa fa-pencil-alt mr-2"></i> Edit</a>
            <a href="{{box.qrCode}}" class="btn btn-primary"><i class="fa fa-qrcode mr-2"></i> Qr</a>
            <form action="/boxes/{{box.id}}/delete" method="POST">
              <button class="btn btn-danger"><i class="fa fa-trash mr-2"></i> Delete</button>
            </form>
        </div>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>