<div class="container">
  <h1>{{title}}</h1>
  {{#if storage}}
  <p>{{ storage.name }}</p>
  <p>{{ storage.description }}</p>
  <p>{{ storage.address.name }}</p>
  <div class="row">
    <div class="col-6">
      <a href="/storages/{{storage.id}}/edit" class="btn btn-warning"><i class="fa fa-pencil-alt mr-2"></i> Edit</a>
    </div>
    <div class="col-6 text-right">
      <a href="/storages/{{storage.id}}/delete" class="btn btn-danger"><i class="fa fa-trash mr-2"></i> Delete</a>
    </div>
  </div>
  {{/if}}
</div>