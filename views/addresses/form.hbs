<div class="container">
  <div id="messageErrors" class="alert alert-danger d-none mt-2"></div>
  <div class="form-row align-items-center mt-3">
    {{#if error}}
    <div class="alert alert-danger col-12 mt-2">
      {{error.message}}
    </div>
    {{/if}}
    <div class="form-group col-12">
      <label for="addressName">Name Address <small class="text-muted">* Descriptive name of the address</small></label>
      <input type="text" class="form-control  {{#if error.name }}is-invalid{{/if}}" id="addressName"
        value="{{ address.name }}" name="name" required>
      {{#if error.name}}
      <div class="invalid-feedback">
        {{error.name.message}}
      </div>
      {{/if}}
    </div>
    <div class="form-group col-12">
      <label for="addressAddress">Address</label>
      <input type="text" class="form-control  {{#if error.address }}is-invalid{{/if}}" id="addressAddress"
        value="{{ address.address }}" name="address" required>
      {{#if error.address}}
      <div class="invalid-feedback">
        {{error.address.message}}
      </div>
      {{/if}}
    </div>
    <div class="form-group col-12 col-md-6">
      <label for="addressCountry">Country</label>
      <input type="text" class="form-control  {{#if error.country }}is-invalid{{/if}}" id="addressCountry"
        value="{{ address.country }}" name="country" required>
      {{#if error.country}}
      <div class="invalid-feedback">
        {{error.country.message}}
      </div>
      {{/if}}
    </div>
    <div class="form-group col-12 col-md-6">
      <label for="addressPostalCode">Zip Code</label>
      <input type="text" class="form-control  {{#if error.postalCode }}is-invalid{{/if}}" id="addressPostalCode"
        value="{{ address.postalCode }}" name="postalCode" required>
      {{#if error.postalCode}}
      <div class="invalid-feedback">
        {{error.postalCode.message}}
      </div>
      {{/if}}
    </div>
    <div class="form-group col-12 col-md-6">
      <label for="addressCity">City</label>
      <input type="text" class="form-control  {{#if error.city }}is-invalid{{/if}}" id="addressCity"
        value="{{ address.city }}" name="city" required>
      {{#if error.city}}
      <div class="invalid-feedback">
        {{error.city.message}}
      </div>
      {{/if}}
    </div>
    <div class="form-group col-12 col-md-6">
      <label for="addressState">State</label>
      <input type="text" class="form-control  {{#if error.state }}is-invalid{{/if}}" id="addressState"
        value="{{ address.state }}" name="state" required>
      {{#if error.state}}
      <div class="invalid-feedback">
        {{error.state.message}}
      </div>
      {{/if}}
    </div>
    <div class="form-group col-12 col-md-6">
      <label for="addressLongitude">Longitude</label>
      <input type="text" class="form-control  {{#if error.longitude }}is-invalid{{/if}}" id="addressLongitude"
        value="{{ address.longitude }}" name="longitude">
      {{#if error.longitude}}
      <div class="invalid-feedback">
        {{error.longitude.message}}
      </div>
      {{/if}}
    </div>
    <div class="form-group col-12 col-md-6">
      <label for="addressLatitude">Latitude</label>
      <input type="text" class="form-control  {{#if error.latitude }}is-invalid{{/if}}" id="addressLatitude"
        value="{{ address.latitude }}" name="latitude">
      {{#if error.latitude}}
      <div class="invalid-feedback">
        {{error.latitude.message}}
      </div>
      {{/if}}
    </div>
    <div class="col-12">
      <div class="custom-control custom-switch">
        <input type="checkbox" class="custom-control-input  {{#if error.defaultAddress }}is-invalid{{/if}}"
          name="defaultAddress" id="defaultAddress" value="true" {{#if  address.defaultAddress}}
          {{#ifEqual address.defaultAddress true }}checked{{/ifEqual}}{{/if}}>
        <label class="custom-control-label" for="defaultAddress">Use this address as default</label>
      </div>
    </div>
    {{#if error.address}}
    <div class="invalid-feedback">
      {{error.address.message}}
    </div>
    {{/if}}
  </div>