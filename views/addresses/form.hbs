
  <div class="form-row align-items-center">
    <div class="form-group col-12">
      <label for="name">Name</label>
      <input type="text" class="form-control  {{#if error.name }}is-invalid{{/if}}" id="name" value="{{ address.name }}" name="name" required>
      {{#if error.name}}
        <div class="invalid-feedback">
          {{error.name.message}}
        </div>
      {{/if}}
    </div>
    <div class="form-group col-12">
      <label for="address">Address</label>
      <input type="text" class="form-control  {{#if error.address }}is-invalid{{/if}}" id="address" value="{{ address.address }}" name="address" required>
      {{#if error.address}}
        <div class="invalid-feedback">
          {{error.address.message}}
        </div>
      {{/if}}
    </div>
    <div class="form-group col-12 col-md-6">
      <label for="city">City</label>
      <input type="text" class="form-control  {{#if error.city }}is-invalid{{/if}}" id="city" value="{{ address.city }}" name="city" required>
      {{#if error.city}}
        <div class="invalid-feedback">
          {{error.city.message}}
        </div>
      {{/if}}
    </div>
    <div class="form-group col-12 col-md-6">
      <label for="state">State</label>
      <input type="text" class="form-control  {{#if error.state }}is-invalid{{/if}}" id="state" value="{{ address.state }}" name="state" required>
      {{#if error.state}}
        <div class="invalid-feedback">
          {{error.state.message}}
        </div>
      {{/if}}
    </div>
    <div class="form-group col-12 col-md-6">
      <label for="country">Country</label>
      <input type="text" class="form-control  {{#if error.country }}is-invalid{{/if}}" id="country" value="{{ address.country }}" name="country" required>
      {{#if error.country}}
        <div class="invalid-feedback">
          {{error.country.message}}
        </div>
      {{/if}}
    </div>
    <div class="form-group col-12 col-md-6">
      <label for="postalCode">Zip Code</label>
      <input type="text" class="form-control  {{#if error.postalCode }}is-invalid{{/if}}" id="postalCode" value="{{ address.postalCode }}" name="postalCode" required>
      {{#if error.postalCode}}
        <div class="invalid-feedback">
          {{error.postalCode.message}}
        </div>
      {{/if}}
    </div>
    <div class="form-group col-12 col-md-6">
      <label for="longitude">Longitude</label>
      <input type="text" class="form-control  {{#if error.longitude }}is-invalid{{/if}}" id="longitude" value="{{ address.longitude }}" name="longitude" required>
      {{#if error.longitude}}
        <div class="invalid-feedback">
          {{error.longitude.message}}
        </div>
      {{/if}}
    </div>
    <div class="form-group col-12 col-md-6">
      <label for="latitude">Latitude</label>
      <input type="text" class="form-control  {{#if error.latitude }}is-invalid{{/if}}" id="latitude" value="{{ address.latitude }}" name="latitude" required>
      {{#if error.latitude}}
        <div class="invalid-feedback">
          {{error.latitude.message}}
        </div>
      {{/if}}
    </div>
    <div class="custom-control custom-switch">
      <input type="checkbox" class="custom-control-input  {{#if error.defaultAddress }}is-invalid{{/if}}" name="defaultAddress" id="defaultAddress" value="true" {{#ifEquals address.defaultAddress true }}checked{{/ifEquals}}>
      <label class="custom-control-label" for="defaultAddress">Use this address as default</label>
    </div>
    {{#if error.address}}
      <div class="invalid-feedback">
        {{error.address.message}}
      </div>
    {{/if}}
    <div class="col-12 offset-md-9 col-md-3 mt-2">
      {{#if address}}
      <button type="submit" class="btn btn-primary btn-block">Save</button>
      {{else}}
      <button type="submit" class="btn btn-primary btn-block">Create</button>
      {{/if}}
    </div>
  </div>