
  <div class="row align-items-center mb-4">
    <div class="col-12 col-md-9">
      <h1 class="">{{title}}</h1>
    </div>
    <div class="col-12 col-md-3 text-right">
      <a href="/addresses/new" class="btn btn-primary"><i class="fa fa-plus mr-2"></i> Add new</a>
    </div>
  </div>
  <div class="row">
  {{#if addresses}}
    {{#each addresses as |address|}}
    <div class="col-sm-6 mb-2">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><a href="/addresses/{{address.id}}/edit">{{address.name}}</a></h5>
          <p class="card-text">{{address.city}}</p>
          <p class="card-text">{{#if address.defaultAddress}}Yes{{else}}No{{/if}} Default address</p>
          <div class="row">
            <div class="col-6">
              <a href="/addresses/{{address.id}}" class="btn btn-primary"><i class="fa fa-eye mr-2"></i> View</a>
            </div>
            <div class="col-6 text-right">
              <div class="btn-group">
                <a href="/addresses/{{address.id}}/edit" class="btn btn-warning"><i class="fa fa-pencil-alt"></i> </a>
                <form action="/addresses/{{address.id}}/delete" method="POST">
                  <button class="btn btn-danger"><i class="fa fa-trash"></i> </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
{{/if}}