<div class="collapse form-collapse my-2" id="collapseNewAddress">
  <div class="card card-body">
      <h3 class="mb-0">Add new address</h3>
      <form id="addAddress" method="POST"> 
        <div id="messageError" class="alert alert-danger d-none  mt-2"></div>
        <div class="form-row align-items-center">
          <div class="form-group col-12">
            <label for="addressName">Name</label>
            <input type="text" class="form-control" id="addressName" value="" name="name">
          </div>
          <div class="form-group col-12">
            <label for="addressAddress">Address</label>
            <input type="text" class="form-control" id="addressAddress" value="" name="address">
          </div>
          <div class="form-group col-12 col-md-6">
            <label for="addressCountry">Country</label>
            <input type="text" class="form-control" id="addressCountry" value="" name="country">
          </div>
          <div class="form-group col-12 col-md-6">
            <label for="addressPostalCode">Zip Code</label>
            <input type="text" class="form-control" id="addressPostalCode" value="" name="postalCode">
          </div>
          <div class="form-group col-12 col-md-6">
            <label for="addressCity">City</label>
            <input type="text" class="form-control" id="addressCity" value="" name="city">
          </div>
          <div class="form-group col-12 col-md-6">
            <label for="addressState">State</label>
            <input type="text" class="form-control" id="addressState" value="" name="state">
          </div>
          <div class="form-group col-12 col-md-6">
            <label for="addressLongitude">Longitude</label>
            <input type="text" class="form-control" id="addressLongitude" value="" name="longitude">
          </div>
          <div class="form-group col-12 col-md-6">
            <label for="addressLatitude">Latitude</label>
            <input type="text" class="form-control" id="addressLatitude" value="" name="latitude">
          </div>
          <div class="form-group col-12">
            <div class="custom-control custom-switch">
              <input type="checkbox" class="custom-control-input" name="defaultAddress" id="defaultAddress" value="true">
              <label class="custom-control-label" for="defaultAddress">Use this address as default</label>
            </div>
          </div>
          <div class="col-12 offset-md-9 col-md-3 mt-2">
            <a class="btn btn-warning btn-block btn-send" >New address</a>
          </div>
        </div>
      </form>
  </div>
</div>